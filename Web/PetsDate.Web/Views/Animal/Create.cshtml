@model PetsDate.Web.ViewModels.Animal.CreateAnimalInputModel

@{ 
    this.ViewData["Title"] = "Add new Animal";
    var categoryItems = this.Model.CategoriesItems.Select(x => new SelectListItem(x.Value, x.Key));
}

<div class="text-center">
    <h1>@this.ViewData["Title"]</h1>
</div>

<form method="post" class="col-md-6 offset-3" enctype="multipart/form-data">

    <section class="form-group">
        <label asp-for="Name"></label>

        <input asp-for="Name" class="form-control" />

        <span asp-validation-for="Name" class="text-danger"></span>
    </section>

    <section>
        <label asp-for="Age"></label>

        <input asp-for="Age" class="form-control" />

        <span asp-validation-for="Age" class="text-danger"></span>
    </section>

    <section>
        <label asp-for="Color"></label>

        <input asp-for="Color" class="form-control" />

        <span asp-validation-for="Color" class="text-danger"></span>
    </section>

    <section>
        <label asp-for="Weight"></label>

        <input asp-for="Weight" class="form-control" />

        <span asp-validation-for="Weight" class="text-danger"></span>
    </section>

    <section class="form-group">
        <label asp-for="Image"></label>

        <input asp-for="Image" class="form-control" />

        <span asp-validation-for="Image" class="text-danger"></span>
    </section>

    <section>
        <label asp-for="CategoryId"></label>

        <select asp-for="CategoryId" class="form-control" asp-items="categoryItems">
        </select>

        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </section>

    <input type="submit" class="btn btn-primary  mt-3" value="Submit"/>
</form>
