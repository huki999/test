@model PetsDate.Web.ViewModels.Animal.AnimalListViewModel
@{
    this.ViewData["Title"] = "Collection of Images";
}

<div class="text-center h1">
    <h1>@this.ViewData["Title"]</h1>
</div>

<div class="container row justify-content-xl-center">

    @foreach (var animalImage in this.Model.AnimalImages)
    {
        <div class="card col-md-3 mt-4 mr-4" style="width: 12rem">
            <img class="card-img-top" src="@animalImage.ImageUrl" alt="Card image cap">
        </div>
    }

</div>

<div class="text-center h1">
    <a class="btn btn-primary" asp-area="" asp-controller="Animal" asp-action="All">Return</a>
</div>