@model PetsDate.Web.ViewModels.SosSignal.SosSignalListViewModel
@{
    this.ViewData["Title"] = "All SosSignals, page " + Model.PageNumber;
}

<div class="text-center h1">
    <h1>@this.ViewData["Title"]</h1>
</div>

<div class="container row justify-content-xl-center">

    @foreach (var sosSignal in this.Model.SosSignals)
    {
        <div class="card col-md-3 mt-4 mr-4" style="width: 18rem;">
            <img class="card-img-top" src="@sosSignal.ImageUrl" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@sosSignal.Name</h5>
                <p class="card-text">Description: @sosSignal.Description</p>
                <p class="card-text">Location: @sosSignal.Location</p>
                

                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
    }
</div>

<partial name="_PagingPartial" model="@Model" />
