@model PetsDate.Web.ViewModels.Event.CreateEventInputModel
@{
    this.ViewData["Title"] = "Add new Event";
}

<div class="text-center">
    <h1>@this.ViewData["Title"]</h1>
</div>

<form method="post" class="col-md-6 offset-3">
    <section class="form-group">
        <label asp-for="Name"></label>

        <input asp-for="Name" class="form-control" />

        <span asp-validation-for="Name" class="text-danger"></span>
    </section>

    <section class="form-group">
        <label asp-for="Location"></label>

        <input asp-for="Location" class="form-control" />

        <span asp-validation-for="Location" class="text-danger"></span>
    </section>

    <section class="form-group">
        <label asp-for="BeginEvent"></label>

        <input asp-for="BeginEvent" class="form-control" />

        <span asp-validation-for="BeginEvent" class="text-danger"></span>
    </section>

    <section class="form-group">
        <label asp-for="EndEvent"></label>

        <input asp-for="EndEvent" class="form-control" />

        <span asp-validation-for="EndEvent" class="text-danger"></span>
    </section>

    <input type="submit" class="btn btn-primary" value="Submit" />
</form>
